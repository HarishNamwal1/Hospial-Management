          <div class="d-flex justify-content-center m-5">
             <h1 class="py-5 text-dark text-opacity-75">Appointments</h1>
          </div>
          <div>
            <% if(regdata.length>0){ %>
              <table class="table table-dark table-striped border border-light">
                <thead>
                  <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Mobile</th>
